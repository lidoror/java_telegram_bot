pipeline {
    agent any
    environment {
                IMAGE_TAG = sh(returnStdout: true, script: 'git rev-parse --short HEAD')
                IMAGE_NAME = "***REMOVED***or-java-telegram-bot"
                }

    stages {
        stage('jar') {
            steps {
                sh 'mvn clean compile assembly:single '
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -t $IMAGE_NAME:$IMAGE_TAG .'
            }
        }

    }
}